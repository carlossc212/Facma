<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="456.0" prefWidth="725.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.resma.facma.controller.ProductController">
    <Label layoutX="18.0" layoutY="27.0" text="Buscar producto:" />
    <TextField fx:id="productSearch" layoutX="114.0" layoutY="23.0" prefHeight="25.0" prefWidth="319.0" promptText="Datos del producto" />
    <TableView fx:id="productTable" layoutX="14.0" layoutY="68.0" prefHeight="310.0" prefWidth="680.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Nombre" />
            <TableColumn fx:id="descriptionColumn" text="Descripción" />
            <TableColumn fx:id="priceColumn" text="Precio" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Button fx:id="addButton" onAction="#addProduct" layoutX="454.0" layoutY="21.0" minWidth="-Infinity" prefWidth="70.0" styleClass="button-green" text="Añadir" />
    <Button fx:id="editButton" layoutX="534.0" layoutY="21.0" minWidth="-Infinity" prefWidth="70.0" styleClass="button-yellow" text="Editar" />
    <Button fx:id="deleteButton" onAction="#deleteProduct" layoutX="613.0" layoutY="21.0" minWidth="-Infinity" prefWidth="70.0" styleClass="button-red" text="Eliminar" />
</AnchorPane>